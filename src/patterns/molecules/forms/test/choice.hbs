<div class="mzp-c-choice{{#if is-legal}} mzp-is-legal{{/if}}">
  <input class="mzp-c-choice-control" type="{{ type }}" name="{{ name }}" id="{{ id }}" value="{{ value }}" {{#if required}}required aria-required="true"{{/if}}>
  <label class="mzp-c-choice-label" for="{{ id }}">{{#block "label"}}Label{{/block}}</label>
  {{#if msg}}<div class="mzp-c-choice-msg">{{ msg }}</div>{{/if}}
  {{#if info}}<p class="mzp-c-choice-info">{{#block "info"}}{{/block}}</p>{{/if}}
</div>

