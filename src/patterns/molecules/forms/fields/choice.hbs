<div class="mzp-c-choice">
  <input class="mzp-c-choice-control" type="{{ type }}" name="{{ name }}" id="{{ id }}" value="{{ value }}" {{#if required}}required aria-required="true"{{/if}}>
  <label class="mzp-c-choice-label {{#if is-legal}} mzp-t-small{{/if}}" for="{{ id }}">{{#block "label"}}Label{{/block}}</label>
  {{#if msg}}<div class="mzp-c-form-msg">{{ msg }}</div>{{/if}}
  {{#if info}}<p class="mzp-c-form-info">{{#block "info"}}{{/block}}</p>{{/if}}
</div>

